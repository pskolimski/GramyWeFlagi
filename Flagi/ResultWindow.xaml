<Window x:Class="Flagi.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Flagi"
        mc:Ignorable="d"
        Title="WYNIK - GRAMY WE FLAGI" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="Coral">
            <Label Content="GRAMY WE FLAGI" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30" />
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Twój wynik" FontSize="18" HorizontalAlignment="Center" />
            <Label Content="10/10" Name="ScoreLabel" FontSize="50" HorizontalAlignment="Center" />
            <Label Content="Twój nick" Name="NickLabel" FontSize="16" HorizontalAlignment="Center" />
            <Label Content="Czas" Name="TimeLabel" FontSize="16" HorizontalAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Content="Zagraj ponownie" Click="PlayAgain" HorizontalAlignment="Center" Margin="30" Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
